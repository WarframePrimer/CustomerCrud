<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
	<default-config>
		<!-- 四大参数的设置 -->
		<property name="jdbcUrl">
			jdbc:mysql://localhost:3306/customers?useUnicode=true&amp;characterEncoding=utf8&amp;rewriteBatchedStatements=true
		</property>
		<property name="driverClass">com.mysql.jdbc.Driver</property>
